{
  "name": "Screensharing Extension",
  "description": "Screensharing Extension for my app",
  "version": "1.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://tpcstld-stream.herokuapp.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": [
    "tabs",
    "desktopCapture",
    "https://tpcstld-stream.herokuapp.com/*"
  ]
}
